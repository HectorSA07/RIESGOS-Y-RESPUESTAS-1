@model Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>
    <!-- Bootstrap 5.3 - Enlace al archivo CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .card {
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 500;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Iniciar sesión</h3>

                        <!-- Formulario -->
                        <form asp-controller="AccesoController1" asp-action="Index" method="post" class="needs-validation" novalidate>
                            @* Validación y campos del formulario *@
                            <div class="mb-3">
                                <label for="Correo" class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" id="Correo" name="Correo" asp-for="Correo" required>
                                <div class="invalid-feedback">
                                    Por favor, ingresa una dirección de correo válida.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="Contraseña" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" id="Contraseña" name="Contraseña" asp-for="Contraseña" required>
                                <div class="invalid-feedback">
                                    La contraseña es obligatoria.
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Recordarme
                                    </label>
                                </div>
                                @* <a href="#" class="text-muted">¿Olvidaste tu contraseña?</a> *@
                            </div>

                            <!-- Botón de envío -->
                            <button type="submit" class="btn btn-primary">Iniciar sesión</button>

                            @* <div class="text-center mt-3">
                                <p class="mb-0">¿No tienes cuenta? <a href="#" class="text-primary">Registrate aquí</a></p>
                            </div> *@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap 5.3 - Enlace al archivo JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Habilitar la validación de Bootstrap
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>


</body>


</html>